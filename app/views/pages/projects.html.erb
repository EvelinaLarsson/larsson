      <h2 id="onetwosix">One Two Six - weeks 8 & 9</h2>
      <div class="content">
        <div id="carouselExampleControlsOne" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= image_tag "126-home.png", class: "d-block w-100" %>
